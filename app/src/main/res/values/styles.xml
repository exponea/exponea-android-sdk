<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppButtonRed" parent="AppButton">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppInboxButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:theme">@style/AppButton</item>
    </style>

    <style name="AppInboxActionButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:theme">@style/AppButton</item>
    </style>

    <style name="Theme.AppInboxListActivity" parent="@style/AppTheme">
    </style>

    <style name="Theme.AppInboxDetailActivity" parent="@style/AppTheme">
    </style>

    <style name="AppInboxEmptyStatusTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppInboxErrorStatusTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppInboxEmptyStatusMessage">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppInboxErrorStatusMessage">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppInboxAppBarOverlayStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:theme">@style/Theme.AppInboxAppBarOverlay</item>
        <item name="android:background">@drawable/toolbar_gradient</item>
        <item name="elevation">0dp</item>
        <item name="android:translationZ">0.1dp</item>
    </style>

    <style name="AppInboxAppBarPopupStyle">
        <item name="android:theme">@style/Theme.AppInboxAppBarPopupOverlay</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.AppInboxAppBarPopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

</resources>
